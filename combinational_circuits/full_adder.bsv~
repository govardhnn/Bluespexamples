package full_adder;


interface IFC_fa;
   method int the_answer (int a, int b, int cin);
endinterface

(*synthesize*)
module full_add(IFC_type);
   Reg#(Bit#(32)) x <- mkRegU;
Reg#(Bit#(32)) y <- mkRegU;
   
   method the_answer (Int#(1) a, Int#(1) b, Int#(1) cin);
   let s = a ^ b ^ cin;
   let cout = (a & b) | (cin & (a ^ b));
   return {cout, s};
   endmethod
endmodulel
   

endpackage
